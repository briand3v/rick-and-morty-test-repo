{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "outDir": "dist",                        
    "strict": true,                           
    "baseUrl": "./",                       
    "esModuleInterop": true,                  
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "useUnknownInCatchVariables": true,
    "paths": {
      "@application/*": [
        "src/application/*"
      ],
      "@config/*": [
        "src/config/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@infrastructure/*": [
        "infrastructure/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
  ]
}